<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c4c8a"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/colorText"
        app:itemTextColor="@color/colorText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navigation" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFF"
        app:layout_constraintBottom_toTopOf="@+id/navigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

    </View>

    <Button
        android:id="@+id/bkRmBtn"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@drawable/buttonborder"
        android:lineSpacingExtra="36sp"
        android:padding="16dp"
        android:text="@string/book_a_room"
        android:drawableStart="@drawable/outline_hotel_white_36"
        android:drawablePadding="5dp"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/inboxBtn"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@drawable/buttonborder"
        android:lineSpacingExtra="36sp"
        android:padding="16dp"
        android:text="@string/inbox"
        android:drawableStart="@drawable/outline_all_inbox_white_36"
        android:drawablePadding="5dp"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkIn" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@drawable/buttonborder"
        android:lineSpacingExtra="36sp"
        android:padding="16dp"
        android:drawableStart="@drawable/outline_exit_to_app_white_36"
        android:drawablePadding="5dp"
        android:text="@string/logout"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyCardBtn" />

    <Button
        android:id="@+id/keyCardBtn"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@drawable/buttonborder"
        android:lineSpacingExtra="36sp"
        android:padding="16dp"
        android:drawableStart="@drawable/outline_vpn_key_white_36"
        android:drawablePadding="5dp"
        android:text="@string/key_card"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inboxBtn" />

    <Button
        android:id="@+id/checkIn"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@drawable/buttonborder"
        android:lineSpacingExtra="36sp"
        android:padding="16dp"
        android:drawableStart="@drawable/outline_event_available_white_36"
        android:drawablePadding="5dp"
        android:text="@string/check_in"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bkRmBtn" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:paddingTop="@dimen/default_gap"
        android:text="@string/welcome_back_name"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>